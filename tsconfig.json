{
  "compilerOptions": {
    "lib": [
      "es2020"
    ],
    "moduleResolution": "bundler",
    "target": "es2020",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/**/*.spec.ts", "src/**/*.test.ts", "src/**/*.bench.ts"]
}
